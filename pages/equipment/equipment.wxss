/* pages/equipment/equipment.wxss */
page{
  background: #615fdc;
}
.card{
  margin: 16rpx 26rpx 0 26rpx;
  padding: 26rpx;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #757575;
}
.icon{
  width: 36rpx;
  height: 36rpx;
}
.bg{
  width: 300rpx;
  height: auto;
}
.item{
  display: flex;
  align-items: center;
}
text{
  font-weight: 600;
  color: #333333;
  padding: 7rpx 0;
  margin-right:20rpx; 
}
.setter{
  background: #f2f2f2;
  color: #f66062;
  font-size: 24rpx;
  padding: 4rpx 20rpx;
  border-radius: 8rpx;
}
.img{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.addimg,.setterimg{
  height: 190rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}

/*mask*/  
.drawer_screen1 {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
/*content*/  
.drawer_box1 { 
  width: 600rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 37%;  
  left: 3%;  
  z-index: 1001;  
  /* background: #FFFFFF;   */
  margin: -150px 50rpx 0 50rpx;  
}  
.drawer_content1 { 
  border-radius: 20rpx;
  background-size: cover; 
  padding: 30rpx;
  background: #ffffff;

} 
.drawer_content1 image{
  width: 40%;
  margin-left: 30%;
  height: auto;
   margin-bottom: 20rpx;
} 
.btn_x1{
  text-align: center;
  margin-top: 20rpx;
}
.btn_x1 image{
  width: 70rpx;
  height: 70rpx;
 
}
.detail-row{
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  color: #333333;
  padding: 18rpx 0;
}
.detail-title{
  color: #999999;
  margin-right: 6rpx;
  width: 150rpx;
}
.detail-value{
  flex: 1;
}
.title{
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  text-align: center;
  padding: 50rpx 0;
}