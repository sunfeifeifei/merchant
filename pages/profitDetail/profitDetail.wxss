/* pages/profitDetail/profitDetail.wxss */
page{
  background: #615fdc;
}
.top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px;
  box-sizing: border-box;
  color: #ffffff;
  font-size: 30rpx;
}
.picker{
  display: flex;
  align-items: center;
}
.picker image{
  height: auto;
  width: 36rpx;
  margin-right: 10rpx;
}
.bottom{
  display: flex;
}

.left{
  width: 190rpx;
  height: 100%;
}
.left-item{
  color: #b0aff5;
  font-size: 26rpx;
  padding: 26rpx 0;
  text-align: center;
}
.left-item-on{
  background: #3d3aa1;
  color: #fcfffd;
}
.right{
  flex: 1;
  height: 100%;
  background: #3d3aa1;
  border-left: 1px solid #eeeeee;
  box-sizing: border-box;
}
.right-item{
  margin: 10rpx 22rpx 10rpx 22rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background: #ffffff;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
}
.right-price{
  display: flex;
  align-items: flex-end;
}
.bottom{
  border-top: 1px solid #eeeeee;
  display: flex;
}


/*mask*/  
.drawer_screen1 {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.7;
  overflow: hidden;  
}  
/*content*/  
.drawer_box1 { 
  width: 600rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 37%;  
  left: 3%;  
  z-index: 1001;  
  /* background: #FFFFFF;   */
  margin: -150px 50rpx 0 50rpx;  
}  
.drawer_content1 { 
  border-radius: 20rpx;
  background-size: cover; 
  padding: 30rpx;
  background: #ffffff;
} 
.drawer_content1 image{
  width: 100%;
} 
.btn_x1{
  text-align: center;
  margin-top: 20rpx;
}
.btn_x1 image{
  width: 70rpx;
  height: 70rpx;
}
.detail-row{
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  color: #333333;
  padding: 18rpx 0;
}
.detail-title{
  color: #999999;
  margin-right: 6rpx;
  width: 150rpx;
}
.detail-value{
  flex: 1;
}

