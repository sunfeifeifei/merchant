/* pages/message/message.wxss */
page{
  background: #efefef;
  padding: 20rpx 0 20rpx 0;
  box-sizing: border-box;
}
.row{
  display: flex;
  align-items: center;
  padding: 24rpx 10rpx 24rpx 30rpx;
  background: #ffffff;
  border-bottom: 1px solid #eeeeee;
}
.title{
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}
.text{
  font-size: 30rpx;
  color: #aaaaaa;
}
.row image{
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.card{
  background: #dcdcdc;
  height: 260rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #444444;
  flex-flow: column;
  margin: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  border-radius: 18rpx;
}
.card image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.btn{
  background: #ffffff;
  color: #ff4444;
  padding: 20rpx;
  text-align: center;
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 600;
}